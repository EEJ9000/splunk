# Puppet Name: <%= @title %>
#
<%
maxout = scope['::splunk::params::subsearch_maxout']
maxtime = scope['::splunk::params::subsearch_maxtime']
ttl = scope['::splunk::params::subsearch_ttl']
dispatch_dir_warning_size = scope['::splunk::params::dispatch_size']
-%>
[search_info]
max_infocsv_messages  = 48
infocsv_log_level = WARN

[subsearch]
<% if maxout != :undef -%>maxout = <%= maxout %><% end %>
<% if maxtime != :undef -%>maxtime = <%= maxtime %><% end %>
<% if ttl != :undef -%>ttl = <%= ttl %><% end %>

[search]
<% if dispatch_dir_warning_size != :undef -%>
dispatch_dir_warning_size = <%= dispatch_dir_warning_size %>
<% end -%>
max_searches_per_cpu = 2

[join]
<% if maxtime != :undef -%>subsearch_maxtime = <%= maxtime %><% end %>
