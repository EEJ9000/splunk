[default]
<%
  warmpath = scope['::splunk::params::warmpath']
  coldpath = scope['::splunk::params::coldpath']
  maxwarmlargeMB = scope['::splunk::params::maxwarmlargeMB']
  maxwarmsmallMB = scope['::splunk::params::maxwarmsmallMB']
  maxcoldlargeMB = scope['::splunk::params::maxcoldlargeMB']
  maxcoldsmallMB = scope['::splunk::params::maxcoldsmallMB']
-%>
<% if @warmpath -%>
[volume:splunk_warm_large]
path = <%= warmpath %>
maxVolumeDataSizeMB = <%= maxwarmlargeMB %>
[volume:splunk_warm_small]
path = <%= warmpath %>
maxVolumeDataSizeMB = <%= maxwarmsmallMB %>
<% end -%>
<% if @coldpath -%>
[volume:splunk_cold_large]
path = <%= coldpath %>
maxVolumeDataSizeMB = <%= maxcoldlargeMB %>
[volume:splunk_cold_small]
path = <%= coldpath %>
maxVolumeDataSizeMB = <%= maxcoldsmallMB %>
<% end -%>
